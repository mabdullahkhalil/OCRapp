<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.something.mabdullahk.ocrapp.scanBarcode">
    
    
    <SurfaceView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:id="@+id/barcodeScan"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/barcodeScan"
        android:text="Focus to Scan"
        android:id="@+id/readQR"
        android:gravity="center"
        android:textSize="24dp"/>

    <Button
        android:id="@+id/btnscan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/readQR"
        android:layout_centerHorizontal="true"
        android:text="Mark" />


</RelativeLayout>
